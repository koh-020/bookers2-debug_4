

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
    <h1>Search Result</h1>
    <table class="table">
      <% if @range == 'User' %>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50'%></td>
            <td>
              <%= link_to user_path(user) do %>
                <%= user.name %>
              <% end %>
              </td>
            <td><%= user.introduction %></td>
          </tr>
          <% end %>
        </tbody>
      <% else %>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= book.user %></td>
          </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>


