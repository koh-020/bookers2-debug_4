<h1>Follower Users</h1>


<% if @followers.empty?%>
    ユーザーはいません
    
<% else %>
    <table class="table">


        <tr>
            <th>image</th>
            <th>name</th>
        </tr>

        <% @followers.each do |follower_user| %>
        <tr>
            <td>
                <%= image_tag follower_user.get_profile_image, size: '50x50' %>
            </td>

            <td>
                <%= follower_user.name %>
            </td>
            <td>
                フォロー数：<%= follower_user.followings.count %>
            </td>
            <td>
                フォロワー数：<%= follower_user.followers.count %>
            </td>
            <td>
                <%= link_to "Show", user_path(follower_user) %>
            </td>
        </tr>
        <% end %>
    </table>

<% end %>